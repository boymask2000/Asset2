<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<managed-bean>
		<managed-bean-name>managedCalendarioBean</managed-bean-name>
		<managed-bean-class>managed.ManagedCalendarioBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>managedUtentiBean</managed-bean-name>
		<managed-bean-class>managed.ManagedUtentiBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>selectedUser</managed-bean-name>
		<managed-bean-class>beans.Utente</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>utente</managed-bean-name>
		<managed-bean-class>beans.Utente</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>modificautente</from-outcome>
			<to-view-id>/admin/modificaUtente.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>utentiHome</from-outcome>
			<to-view-id>/admin/utentihome.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>adminHome</from-outcome>
			<to-view-id>/admin/adminhome.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>nuovoUtente</from-outcome>
			<to-view-id>/admin/nuovoUtente.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>home</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>admin</from-outcome>
			<to-view-id>/admin/adminhome.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>

			<from-outcome>modificaUtente</from-outcome>
			<to-view-id>/admin/utentiupdate.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>


	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>
			<from-outcome>stampa</from-outcome>
			<to-view-id>/viewPdf.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>


</faces-config>
